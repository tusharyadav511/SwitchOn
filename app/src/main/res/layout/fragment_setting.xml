<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackGrey"
    tools:context=".ui.setting.SettingFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/settingPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background4"
                android:fontFamily="casual"
                android:padding="20dp"
                android:text="Privacy Policy"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_surface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settingResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background4"
                android:fontFamily="casual"
                android:padding="20dp"
                android:text="@string/reset_password"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_surface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background4"
                android:fontFamily="casual"
                android:padding="20dp"
                android:text="@string/com_facebook_loginview_log_out_action"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_surface"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>